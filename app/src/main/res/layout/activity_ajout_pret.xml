<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AjoutPretActivity">

    <android.support.design.widget.TabLayout
        android:layout_width="380dp"
        android:layout_height="49dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="2dp">

        <android.support.design.widget.TabItem
            android:id="@+id/vente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vente" />

        <android.support.design.widget.TabItem
            android:id="@+id/depense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/depense" />

        <android.support.design.widget.TabItem
            android:id="@+id/pret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pret" />
    </android.support.design.widget.TabLayout>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:text="Pret"
        android:textStyle="bold"
        android:textSize="23sp"/>


    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="150dp"
        android:text="Remboursement"
        android:textStyle="bold"
        android:textSize="23sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:hint="Nom Client"
        android:textSize="23sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:hint="Montant"
        android:inputType="phone"
        android:textSize="23sp"/>



    <Button
        android:id="@+id/ajouter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="110dp"
        android:background="@color/colorPrimary"
        android:padding="20dp"
        android:text="Ajouter"
        android:textColor="@color/colorBlanc"
        android:textSize="24sp"
        android:textStyle="bold" />



</RelativeLayout>